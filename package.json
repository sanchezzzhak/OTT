  "dependencies": {
    "axios": "^1.7.4",
    "commander": "^11.1.0",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.7",
    "eventemitter2": "^6.4.5",
    "input": "^1.0.1",
    "inquirer": "^9.2.17",
    "moleculer": "^0.14.34",
    "node-dba": "../node-dba",
